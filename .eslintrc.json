{
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "requireConfigFile": false,
        "ecmaFeatures": {
            "jsx": true
        },
        "babelOptions": {
            "presets": ["@babel/preset-react"]
        }
    },
    "settings": {
        "react": {
          "createClass": "createReactClass",
          "pragma": "React",
          "version": "detect"
        },
        "import/resolver": {
            "node": {
                "paths": ["src"]
            }
        }
    },
    "globals": {
        "process": "readonly",
        "fetch": "readonly",
        "document": "readonly",
        "Promise": "readonly",
        "console": "readonly",
        "window": "readonly",
        "setTimeout": "readonly",
        "gapi": "readonly"
    },
    "extends": ["eslint:recommended", "plugin:react/recommended", "prettier"],
    "rules": {
        "semi": ["error", "always"],
        "no-eval": ["error"],
        "prefer-const": ["error", {
            "destructuring": "any",
            "ignoreReadBeforeAssign": false
        }],
        "react/no-find-dom-node": "off",
        "no-console": "off",
        "no-unused-vars": ["error"],
        "jsx-quotes": ["error", "prefer-double"],
        "no-var": "error",
        "react/prop-types": 0,
        "no-multiple-empty-lines": "error",
        "no-duplicate-imports": "error",
        "no-useless-constructor": "error",
        "curly": "error",
        "space-before-blocks": ["error", "always"],
        "valid-jsdoc": "warn"
    },
    "plugins": ["@babel", "react"],
    "env": {
        "jest": true
    }
}
